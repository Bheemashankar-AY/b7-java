pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/Bheemashankar-AY/b7-java.git']]])
                sh 'mvn clean install'
            }
        }

        stage('build docker image') {
            steps {
                script {
                    sh 'docker build -t cidc:1.0 .'
                }
            }
        }
stage('push image to Hub'){
steps{
script{
     withCredentials([string(credentialsId: 'dockerpwd', variable: 'dockerpwd')]) {
           sh 'docker login --username bheema9161 -p ${dockerpwd}'
            sh 'docker push bheema9161/cicd:1.0'
}

    }
}
}

 }
}
